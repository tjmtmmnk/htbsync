{
    "name": "htbsync",
    "version": "1.0",
    "description": "はてなブックマークとブラウザ(chromeなど)のブックマークを同期します",
    "permissions": [
        "bookmarks",
        "tabs",
        "<all_urls>"
    ],
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "64": "icons/icon64.png"
    },
    "content_scripts": [
        {
            "js": [
                "js/oauth_verifier.js",
                "js/browser-polyfill.min.js"
            ],
            "matches": [
                "https://www.hatena.ne.jp/oauth/authorize"
            ],
            "run_at": "document_end"
        }
    ],
    "background": {
        "scripts": [
            "js/chrome_ex_oauthsimple.js",
            "js/chrome_ex_oauth.js",
            "js/background.js",
            "js/browser-polyfill.min.js"
        ],
        "persistent": false
    },
    "browser_action": {
        "default_icon": {
            "32": "icons/icon32.png"
        },
        "default_title": "htbsync"
    },
    "manifest_version": 2
}